{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "Node16",
    "outDir": "./dist",
    "noEmit": false,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/types"
    ],
    "target": "es6"
  },
  "include": [
    "server.ts",
    "controllers",
    "routes",
    "middleware",
    "db"
  ]
}
